    "lit": "^2.8.0",
    "loglevel": "^1.9.1",
    "mqtt": "^5.11.1",
    "node-fetch": "^3.3.2",
    "nosleep.js": "0.12.0",
    "pigpio": "3.3.1",
    "serve-static": "^2.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-proposal-decorators": "^7.23.9",
