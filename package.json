    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "http2-proxy": "5.0.53",
    "markdownlint-cli2": "^0.17.2",
    "nodemon": "^3.0.3",
    "npm-run-all": "4.1.5",
    "rollup": "^4.30.0",
    "rollup-plugin-summary": "^3.0.0",
    "simple-git-hooks": "^2.9.0",
    "tar": "^7.4.3",
    "uvu": "^0.5.6"
